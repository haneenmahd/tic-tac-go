{
  "compilerOptions": {
    "target": "es2016", 
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                  
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"]
}
